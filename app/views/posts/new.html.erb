<h1 class='form_header'>Add a post</h1>
<% flash.each do |type, msg| %>
  <div class='flex_block_row'>
    <%= msg %>
  </div>
<% end %>
<%= form_with model: [@user, @post] do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :text %>
  <%= form.text_area :text %>
  <%= form.submit %>
<% end %>
